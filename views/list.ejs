              <th class="textheader">Profile Picture</th>
              <th class="textheader">Employee Number</th>
              <th class="textheader">First Name</th>
              <th class="textheader">Last Name</th>
              <th class="textheader">Department</th>
              <th class="textheader">Action</th>
              <th class="textheader">Status</th>
            </tr>
          </thead>
          <tbody>
            <% Learn.forEach(function(item) { %>
              <tr>
                <td>
                  <img class="ProfileP" data-toggle="modal" data-target="#popup<%= item._id %>" src="<%= item.Employee_Profile_Picture %>" alt="">
                </td>
                <td class="textpadding"  style="vertical-align: middle;"><%= item.Employee_number %></td>
                <td class="textpadding"  style="vertical-align: middle;"><%= item.Employee_FirstName %></td>
                <td class="textpadding"  style="vertical-align: middle;"><%= item.Employee_LastName %></td>
                <td class="textpadding"  style="vertical-align: middle;"><%= item.Employee_Department %></td>
                <td class="textpadding"  style="vertical-align: middle;">
                  <div  class="row">
                    <div class="col-4"> <button type="button" class="btn btn-success" data-toggle="modal" data-target="#editModal<%= item._id %>">Edit</button></div>
                    <div class="col-4"> <form action="/delete" method="post">
                      <button type="button" class="btn btn-danger">Delete</button>
                    </form></div>
                  </div>
                 
                 
                </td>
                <td style="vertical-align: middle;">
                  <button type="button" class="btn btn-dark">Active</button>
                </td>
              </tr>
              <style>
                .modal-dialog {
                    margin: 0%;
                    position: absolute;
                    top: 0%;
                    left: 40%;
                    transform: none;
                    
                }
                
            </style>
              <!-- Modal -->
              <div class="modal fade" id="popup<%= item._id %>"  tabindex="-1" role="dialog" aria-labelledby="popup<%= item._id %>Label" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content ">
                    <div class="modal-header">
                      <h5 class="modal-title" id="popup<%= item._id %>Label"><%= item.EmployeeTitle %> <%= item.Employee_FirstName %> <%= item.Employee_LastName %></h5>
                      <button type="button" class="btn btn-dark" data-dismiss="modal" aria-label="Close"> Close
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <p class="iNFORStyle">Employee Number: <%= item.Employee_number %></p>
                      <p  class="iNFORStyle">Employee Home Address: <%= item.Employee_Home_Address %></p>
                      <p class="iNFORStyle">Employee Email Address: <%= item.Employee_email_adsress %></p>
                      <p class="iNFORStyle">Employee ID Number: <%= item.EpmloyyeID_Number %></p>
                      <p class="iNFORStyle">Employee Contact Details: <%= item.Epmloyye_Contact %></p>
                      <p class="iNFORStyle">Employee Alternative Contact Details: <%= item.Epmloyye_Altenative_Contact %></p>
                      <p class="iNFORStyle">Department: <%= item.Employee_Department %></p>
                      <p class="iNFORStyle">Employee Tax Number : <%= item.Employee_Tax_Number %></p>
                      <p class="iNFORStyle">Employee UIF: <%= item.Epmloyye_UIF %></p>
                      <p class="iNFORStyle">Employee Tax: <%= item.Epmloyye_TAX %></p>
                      <p class="iNFORStyle">Employee PAYE: <%= item.Epmloyye_PAYE %></p>
                      <p class="iNFORStyle">Employee SDL: <%= item.Epmloyye_SDL %></p>
                      <p class="iNFORStyle">Employee Hourly Rate: <%= item.Epmloyye_hour_Rate %></p>
                      <p class="iNFORStyle">Employee Basic Salary: <%= item.Epmloyye_Basic_Salary %></p>
                      <p class="iNFORStyle">Employee Final Salary: <%= item.Epmloyye_Basic_Final_Salary %></p>
                      <p class="iNFORStyle">Employee Fine: <%= item.Epmloyye_Fines %></p>
                      <p class="iNFORStyle">Employee Citizenship: <%= item.Employee_CitizenShip %></p>
                      <p class="iNFORStyle">Employee Nationality: <%= item.Employee_Nationality %></p>
                      <p class="iNFORStyle">Employee Allocated Leave Days: <%= item.Employee_Leave_Days_total %></p>
                      <p class="iNFORStyle">Employee Days Taken: <%= item.Employee_Leave_Days_Taken %></p>
                      <p class="iNFORStyle">Employee Days Left: <%= item.Employee_Leave_Days_left %></p>
                      <p class="iNFORStyle">Employee Nationality: <%= item.Employee_Nationality %></p>
                     
                      <!-- Add more information as needed -->
                    </div>
                    <div class="row">
                      <div class="col-8"></div>
                      <div class="col-4"> </div>
                    </div>
                   
                  </div>
                </div>
              </div>
              <div class="modal fade" id="editModal<%= item._id %>" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
