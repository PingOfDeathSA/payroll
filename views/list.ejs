                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <form action="/edit" method="POST">
                        <p>
                          Employee Number: <input type="text" name="employeeNumber" value="<%= item.Employee_number %>">
                        </p>
                        <p>
                          Employee Home Address: <input type="text" name="employeeHomeAddress" value="<%= item.Employee_Home_Address %>">
                        </p>
                        <p>
                          Employee Email Address: <input type="text" name="employeeEmailAddress" value="<%= item.Employee_email_adsress %>">
                        </p>
                        <input type="hidden" name="id" value="<%= item._id %>">
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                          <button type="submit" value="Save" class="btn btn-primary">Save changes</button>
                        </div>
                        <!-- <input type="submit" value="Save"> -->
                        
                      </form>
                      
                    </div>
                    
                  </div>
                </div>
              </div>


          
            <% }); %>
